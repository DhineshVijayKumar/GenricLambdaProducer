{
    "compilerOptions": {
        "target": "es2020",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": false,
        "sourceMap": false,
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./",
        "outDir": "./dist"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
